<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="hibernate_github.Employee" table="EMPLOYEE" >
        <id column="id" name="id" type="integer" access="field">
            <generator class="native"/>
        </id>
        <map name="certificates" cascade="all" >
            <key column="employee_id"/>
            <index column="certificate_type" type="string"/>
            <one-to-many class="hibernate_github.Certificate"/>
        </map>
        <property name="firstName" column="first_Name" type="string"/>
        <property name="lastName" column="last_Name" type="string"/>
        <property name="salario" column="salary" type="integer"/>
    </class>
</hibernate-mapping>
